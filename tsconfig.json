{
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}